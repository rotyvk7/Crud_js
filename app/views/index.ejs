    <title>Crud JS - Login</title>
</head>
<body>
    <div>
        <h1>Login</h1>
        <form action="/login" method="post">
            <span>Usu√°rio: </span>
            <input type="text" name="login" id="login" required>
            <br/>
            <span>Senha: </span>
            <input type="password" name="password" id="password" required>
            <br/>
            <input type="submit" value="Entrar" id="loginButton">
        </form>
        <a href="/cadastro">Cadastrar</a>
    </div>
    <% if (fail) {%>
        <span style="color: red;">Ocorreu um erro!</span>
    <% } %>
    <% if (registered) {%>
        <span style="color: green;">Cadastrado com sucesso!</span>
    <% } %>
</body>
</html>